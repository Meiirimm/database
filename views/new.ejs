<!DOCTYPE html>
<html lang="en">
<head>
    <%-include('partials/head.ejs')%>
    <title>Document</title>
</head>
<body>
    <%-include('partials/header.ejs')%>
    <div class="container">
        <form action="/api/stud/new" method="POST" class="form" enctype="multipart/form-data">
            <h3>Добавить нового студента</h3>
            <fieldset class="fieldset">
                <input type="file" name="image">
            </fieldset>
            <fieldset class="fieldset">
                <input type="text" placeholder="Введите полное имя"  name="full_name">
            </fieldset>
            <fieldset class="fieldset">
                <input type="text" placeholder="Введите email" name="email">
            </fieldset>
            <fieldset class="fieldset">
                <select name="course" id="">
                    <%
                        course.forEach(course => {
                    %>
                        <option value="<%=course._id%>"><%=course.name%></option>
                    <%
                        })
                    %>
                </select>
            </fieldset>
            <fieldset class="fieldset">
                <select name="proff" id="">
                    <%
                        proff.forEach(proff => {
                    %>
                        <option value="<%=proff._id%>"><%=proff.name%></option>
                    <%
                        })
                    %>
                </select>
            </fieldset>
            <fieldset class="fieldset">
                <input type="text" placeholder="Введите адресс" name="address">
            </fieldset>
            <fieldset class="fieldset"><button type="submit">Сохранить</button></fieldset>
        </form>

    </div>
    <%-include('partials/scripts.ejs')%>
</body>
</html>